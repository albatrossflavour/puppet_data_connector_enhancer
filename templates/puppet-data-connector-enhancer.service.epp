<%- | String $script_path,
      String $dropzone_file,
      String $service_user | -%>
[Unit]
Description=Puppet Data Connector Enhancer
After=network.target

[Service]
Type=oneshot
User=<%= $service_user %>
Group=<%= $service_user %>
ExecStart=<%= $script_path %> -q -o <%= $dropzone_file %>
StandardOutput=journal
StandardError=journal

[Install]
WantedBy=multi-user.target